<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 该属性设置Struts 2应用是否使用开发模式.如果设置该属性为true,则可以在应用出错时显示更多、 更友好的出错提示.该属性只接受true和flase两个值,该属性的默认值是false.
		通常,应用在开发阶段,将该属性设置为true,当进入产品发布阶段后,则该属性设置为false. -->
	<constant name="struts.devMode" value="true" />

	<!--Struts 2的Action都必须配置在package里,此处使用默认package -->
	<package name="a" namespace="/" extends="struts-default">

		<default-action-ref name="indexShow" />

		<action name="login" class="userAction" method="login" />
		<action name="signup" class="userAction" method="signup" />
		<action name="validate" class="userAction" method="validateUsername">
			<result name="success" type="plainText">fonts/temp/success</result>
			<result name="index" type="plainText">fonts/temp/index</result>
		</action>

		<!--个人资料界面显示信息 -->
		<action name="showUserInfor" class="userAction" method="showUserInfor">
			<result name="success">/user_infor.jsp</result>
			<result name="error">/login.html</result>
		</action>

		<!--个人帐号信息修改 -->
		<action name="updateUserInfor" class="userAction" method="updateUserInfor">
			<result name="success" type="redirect">user_infor.jsp</result>
			<result name="error">/error.jsp</result>
			<result name="input">/error.jsp</result>
		</action>


		<!--地址显示 -->
		<action name="showAllAddress" class="addressAction" method="showAllAddress">
			<result name="success">/update_address.jsp</result>
		</action>

		<!--删除某一个地址 -->
		<action name="deleteAddress" class="addressAction" method="deleteAddress">
			<result name="success" type="chain">showAllAddress</result>
			<result name="error">/error.jsp</result>
		</action>

		<!-- 界面显示的图片,及分页的效果 -->
		<action name="indexShow" class="indexShowAction" method="indexShow">
			<result name="success">/index.jsp</result>
			<result name="error">/error.jsp</result>
		</action>

		<!-- 商品详情页面展示 -->
		<action name="goodsDetail" class="goodsDetailAction" method="showGoods">
			<result name="success">/goods_detail.jsp</result>
			<result name="error">/error.jsp</result>
		</action>


		<!-- 商品发布 -->
		<action name="releaseGoods" class="releaseGoodsAction" method="releaseGoods">
			<result name="success" type="chain">indexShow</result>
			<result name="error">/error.jsp</result>
		</action>

		<!--查看个人的发布商品-->
		<action name="showReleaseGoods" class="releaseGoodsAction" method="showReleaseGoods">
			<result name="success">/showReleaseGood.jsp</result>
			<result name="noContent">/error.jsp</result>
		</action>

		<!--删除发布的商品-->
		<action name="deleteReleaseGoods" class="releaseGoodsAction" method="deleteReleaseGoods">
			<result name="success" type="chain">showReleaseGoods</result>
			<result name="error">/error.jsp</result>
		</action>

		<!-- 查询购物车里的所有商品 -->
		<action name="getshopcargoods" class="com.qst.action.ShopCartAction"
			method="getShopCartGoods">
			<result name="diao">shopcart.jsp</result>
		</action>

		<!--设置从购物车选中的商品进入订单表 -->
		<action name="setGoodinOrder" class="com.qst.action.ShopCartAction"
			method="setGoodinOrder">
			<result name="order" type="chain">getOrderItem</result>
		</action>

		<!-- 查询订单的每个商品的详情 -->
		<action name="getOrderItem" class="com.qst.action.ShopCartAction"
			method="getOrderItem">

			<result name="dyj">order.jsp</result>
		</action>
		<!--支付action -->
		<action name="pay" class="com.qst.action.OrderAction" method="pay">
			<result name="pay"></result>
		</action>

		<!-- 设置我的地址 -->
		<action name="setAdress" class="com.qst.action.AddressAction"
			method="setAdress">
			<result name="success" type="chain">showAllAddress</result>
			<result name="error">/error.jsp</result>
		</action>




		<!--将某单个商品设置进入我的订单并且跳转到我的订单界面 -->
		<action name="setgoodsinordre" class="com.qst.action.SetGoodsInOrderAction"
			method="setgoodsinordre">
			<result name="order" type="chain">getOrderItem</result>
		</action>

		<!--将商品设置进入购物车表并且进入我的购物车界面 -->
		<action name="addInshopcar" class="com.qst.action.ShopCartAction"
			method="addToShopCart">
			<result name="success" type="plainText">fonts/temp/success</result>
			<result name="login" type="plainText">fonts/temp/login</result>
			<result name="index" type="plainText">fonts/temp/index</result>
		</action>


		<!--删除购物车的某一个商品 -->
		<action name="delGoodsShopCart" class="com.qst.action.ShopCartAction"
			method="delGoodsShopCart">
			<result name="del" type="chain">getshopcargoods</result>
			<result name="login">login.html</result>
			<result name="index">error.jsp</result>
		</action>


		<action name="cartCount" class="com.qst.action.ShopCartAction"
			method="cartCount"></action>

		<action name="addFavorite" class="com.qst.action.ShopCartAction"
			method="addFavorite">
			<result name="favorite" type="chain">getshopcargoods</result>
			<result name="login">login.html</result>
			<result name="index">error.jsp</result>
		</action>

		<action name="removeFavorite" class="com.qst.action.ShopCartAction"
				method="removeFavorite">
			<result name="favorite" type="redirect">myFavorites.action</result>
			<result name="login">login.html</result>
			<result name="index">error.jsp</result>
		</action>

		<action name="myFavorites" class="com.qst.action.ShopCartAction" method="myFavorite">
			<result name="favorite">user-my-collection.jsp</result>
			<result name="login">login.html</result>
			<result name="index">error.jsp</result>
		</action>

		<action name="deleteCartGoods" class="com.qst.action.ShopCartAction"
			method="deleteCartGoods">
			<result name="success" type="plainText">fonts/temp/success</result>
			<result name="login" type="plainText">fonts/temp/login</result>
			<result name="index" type="plainText">fonts/temp/success</result>
		</action>


		<action name="quickBuy" class="com.qst.action.ShopCartAction"
			method="quickBuy">
			<result name="login">login.html</result>
			<result name="index" >error.jsp</result>
			<result name="success">quick_buy.jsp</result>
		</action>

		<action name="submitOrder" class="orderAction" method="submitOrder">
			<result name="success" type="plainText">fonts/temp/success</result>
			<result name="login" type="plainText">fonts/temp/login</result>
			<result name="index" type="plainText">fonts/temp/index</result>
		</action>

		<action name="myOrders" class="orderAction" method="getMyOrders">
			<result name="success">user-order-list.jsp</result>
			<result name="login">login.html</result>
			<result name="index">error.jsp</result>
		</action>

		<!-- 得到所有的未完成订单 -->
		<action name="getAllorder" class="com.qst.action.OrderAction"
			method="getAllorder">
			<result name="getorder">Outstanding_Order.jsp</result>
		</action>

		<!--编辑本地用户的某一个用户地址 -->
		<action name="editAdress" class="com.qst.action.AddressAction"
			method="editAdress">
			<result name="success" type="chain">showAllAddress</result>
			<result name="error">/error.jsp</result>
		</action>

		<!-- 删除未完成订单 -->
			<action name="cancellationOrder" class="com.qst.action.OutstandingOrderAction" method="cancellationOrder">
			<result name="delOrder" type="redirect">myOrders.action</result>
		</action>

		<!--继续支付某一个订单 -->
		<action name="continuePayment" class="com.qst.action.OutstandingOrderAction"
			method="continuePayment">
			<result name="continuePayment">/order_sub.jsp</result>
		</action>
		<!--支付状态改变 -->
		<action name="payForOrder" class="com.qst.action.OrderAction"
			method="payForOrder">
			<result name="payForOrder" type="chain">indexShow</result>
		</action>

		<!-- 已完成订单的查找 -->

		<action name="comletedOrderIndex" class="com.qst.action.GoodsOrderAction"
			method="comletedOrderIndex">
			<result name="comletedOrderIndex">NoEvaluateOrder.jsp</result>
		</action>
		<!-- 設置回话进入session表中 -->
		<action name="setEvalueInSession" class="com.qst.action.SessionAction"
			method="setEvalueInSession">
			<result name="evaluate">NoEvaluateOrder.jsp</result>
		</action>

		<action name="evaluaedOrderIndex" class="com.qst.action.GoodsOrderAction"
			method="evaluaedOrderIndex">
			<result name="evaluaedOrderIndex">EvaluateGoods.jsp</result>
		</action>

		<action name="getGoodsItems" class="com.qst.action.GoodsSoldAction" method="getGoodsItems">
			<result name="goodsitems">GoodsSold.jsp</result>
		</action>
		<action name="setOrderpay_type" class="com.qst.action.GoodsSoldAction" method="setOrderpay_type">
			<result name="setOrderpay_type" type="chain">getGoodsItems</result>
		</action>
		
		
		<action name="getOrdernumber" class="com.qst.action.GoodsSoldAction" method="getOrdernumber">
			<result name="getOrdernumber" type="chain">getGoodsOrderItems</result>
		</action>
		<action name="getGoodsOrderItems" class="com.qst.action.GoodsSoldAction" method="getGoodsOrderItems">
				<result name="GoodSOrderItems">GoodsSold.jsp</result>
		</action>
		
		<action name="getNoAnswerGoodsOrder" class="com.qst.action.GoodsSoldAction" method="getNoAnswerGoodsOrder">
			<result name="getNoAnswerGoodsOrder"> NoAnswerGoodsOrder.jsp</result>
		</action>
		
		<action name="setReply" class="com.qst.action.GoodsSoldAction" method="setReply">
			<result name="error">/error.jsp</result>
			<result name="success" type="chain">getNoAnswerGoodsOrder</result>
		</action>

		<action name="member" class="userAction" method="manageUser">
			<result name="success">authority.jsp</result>
			<result name="login">login.html</result>
			<result name="error">error.jsp</result>
		</action>

		<action name="enableAuthority" class="userAction" method="enableAuthority">
			<result name="success" type="redirect">member.action</result>
			<result name="login">login.html</result>
			<result name="error">error.jsp</result>
		</action>

		<action name="disableAuthority" class="userAction" method="disableAuthority">
			<result name="success" type="redirect">member.action</result>
			<result name="login">login.html</result>
			<result name="error">error.jsp</result>
		</action>

		<action name="enableUser" class="userAction" method="enableUser">
			<result name="success" type="redirect">member.action</result>
			<result name="login">login.html</result>
			<result name="error">error.jsp</result>
		</action>

		<action name="disableUser" class="userAction" method="disableUser">
			<result name="success" type="redirect">member.action</result>
			<result name="login">login.html</result>
			<result name="error">error.jsp</result>
		</action>

		<action name="deleteUser" class="userAction" method="deleteUser">
			<result name="success" type="redirect">member.action</result>
			<result name="login">login.html</result>
			<result name="error">error.jsp</result>
		</action>

	</package>
</struts>
