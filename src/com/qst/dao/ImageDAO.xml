<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qst.dao.ImageDAO">

    <!--通过 image_id 查找所有的imageUrl 返回一个list集合 -->
    <select id ="getImageUrl" parameterType="int" resultType="list">
        select * from image where image_id=#{image_id};
    </select>

    <select id="getImage" parameterType="java.lang.Long" resultType="Image">
        select * from image where goodsnumber=#{goodsnumber};
    </select>
    
    <!--根据g_id寻找到imageid-->
      <select id="findImageByid" parameterType="int" resultType="int">
        select image_id from goods where g_id=#{goodId};
    </select>
    
	<!--更新image的图片-->
	<update id="updateImage" parameterType="Image">
		update image set url1=#{url1},url2=#{url2},url3=#{url3},url4=#{url4}
		where image_id = #{image_id}
	</update>

    <select id="showSmallPic" parameterType="int" resultType="Image">
        SELECT
        * from image where image.image_id IN
        (select image_id from goods where g_id= #{goodId})
    </select>
    
    <insert id="insertImage" parameterType="Image" useGeneratedKeys="true" keyProperty="image_id">
    	insert into
		image(url1,url2,url3,url4)
		VALUES(#{url1},#{url2},#{url3},#{url4})
    </insert>
	
</mapper>