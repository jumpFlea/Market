<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qst.dao.UserDao">

	<insert id="add" parameterType="User">
		INSERT INTO usertable
		(username, psw, email,state_type, integral,u_image)
		VALUES
		(#{username},#{psw},#{email},#{state_type},#{integral},#{u_image})
	</insert>

    <insert id="addFavorite" parameterType="ShopCartGoods">
		INSERT INTO favorite (uid,gid) VALUES (#{uid},#{gid})
	</insert>

    <!-- select：查询操作；id：标识；parameterType：接收的参数类型，resultType：返回值类型 -->
	<select id="login" parameterType="User" resultType="User">//传入数据库，输出数据库
		select * 
		from usertable 
		where username = #{username} and psw = #{psw}
	</select>

	<select id="findByName" resultType="com.qst.model.User"
		parameterType="string">
		SELECT * 
		FROM usertable
		WHERE username = #{username}
	</select>

	<select id="findByID" parameterType="integer" resultType="User">
		select * from usertable where uid=#{uid};
	</select>

	<!-- 个人信息页的显示 -->
	<select id="showUserInfor" parameterType="User" resultType="User">
		select * from usertable where username = #{username};
	</select>
	<!--根据名字查找id -->
	<select id="findIdByName" parameterType="string" resultType="int">
		select uid from usertable where username=#{name};
	</select>

	<!--个人信息的修改 -->
	<update id="updateUserInfor">
		update usertable set username=#{username},psw=#{psw},email=#{email},u_image=#{u_image}
		where uid=#{uid};
	</update>


</mapper>